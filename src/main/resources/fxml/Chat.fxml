<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane fx:id="root" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controller.ChatUIController">
    <left>
        <VBox fx:id="userList" alignment="CENTER" spacing="10.0">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <VBox fx:id="chatArea" alignment="CENTER" spacing="10.0">
            <children>
                <TextArea fx:id="chatHistory" editable="false" minHeight="300.0" wrapText="true"/>
                <HBox spacing="10.0">
                    <TextField fx:id="messageInput" promptText="Type your message..."/>
                    <Button text="Send" onAction="#sendMessage"/>
                </HBox>
            </children>
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
